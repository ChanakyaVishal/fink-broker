message_service="Available services are: monitoring, aggregation"
message_conf="Typical configuration would be $PWD/conf/fink.conf"
message_help="""
Monitor Kafka stream received by Apache Spark\n\n
Usage:\n
    \t./fink -s <service> -c <conf>\n
    \tor\n
    \t./fink --service=<service> --conf=<conf>\n\n

To get help: \n
\t./fink -h or ./fink \n\n

$message_service\n
$message_conf
"""
# Show help if no arguments is given
if [[ $1 == "" ]]; then
  echo -e $message_help
  exit 1
fi

# Grab the command line arguments
while [ "$#" -gt 0 ]; do
  case "$1" in
    "start"|"stop")
        MODE="$1"
        if [[ $2 == "" || $2 == "-c" ]]; then
            echo "$1 requires an argument. ${message_service}" >&2
            exit 1
        fi
        service="$2"
        shift 2
        ;;
    -h)
        echo -e ${message_help}
        exit 1
        ;;
    -c)
        if [[ $2 == "" || $2 == "-s" ]]; then
            echo "$1 requires an argument. ${message_conf}" >&2
            exit 1
        fi
        conf="$2"
        shift 2
        ;;
    --conf=*)
        conf="${1#*=}"
        shift 1
        ;;
    --conf)
        echo "$1 requires an argument" >&2
        exit 1
        ;;
    -*)
        echo "unknown option: $1" >&2
        exit 1
        ;;
    *)
        echo "unknown argument: $1" >&2
        exit 1
        ;;
  esac
done

# Check if the conf file exists
if [[ ! -f $conf ]]; then
  echo "'$conf' not found!"
  echo $message_conf
  exit 1
fi

# Source the configuration file
source $conf

# Stop services
if [[ $MODE == "stop" ]]; then
  if [[ $service == "ui" ]]; then
    # PID=$(lsof -t -i :${FINKUIPORT})
    FINKUIPORT=${FINKUIPORT} docker-compose down
  else
    SIGNAL=${SIGNAL:-TERM}
    PIDS=$(ps ax | grep -i 'fink' | grep -v grep | awk '{print $1}')

    if [ -z "$PIDS" ]; then
      echo "No fink service(s) to stop"
    else
      echo "Stopping all services..."
      kill -s $SIGNAL $PIDS
    fi
  fi
  exit 1
fi

# Start services
if [[ $service == "ui" ]]; then
  # Launch the UI
  FINKUIPORT=${FINKUIPORT} docker-compose up -d
  echo "UI served at http://localhost:${FINKUIPORT}"
elif [[ $service == "monitoring" ]]; then
  # Monitor the stream of alerts
  spark-submit --master ${SPARK_MASTER} \
      --packages ${FINKPACKAGES} \
      bin/monitor.py ${KAFKA_IPPORT} ${KAFKA_TOPIC} ${FINKWEBPATH} > live.log
elif [[ $service == "aggregation" ]]; then
  # Aggregate the stream of alerts
  echo "Aggregation is coming soon"
else
  # In case you give an unknown service
  echo "unknown service: $service" >&2
  echo $message_service
fi
